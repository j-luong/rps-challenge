<body class="play_page">
  <%= @game.player_1.name %> vs. <%= @game.player_2.name %>
  <br><br>
  Choose a weapon...
  <br><br>
  <section class="weapon_form">
    <form action="/battle" method="post">
      <input type="submit" value="Rock" name="weapon">
      <input type="submit" value="Paper" name="weapon">
      <input type="submit" value="Scissors" name="weapon">
    </form>
  </section>


  <section class="battle_results">
    <% if @game.player_1.weapon %>
      <%= @game.player_1.name %> chose <%= @game.player_1.weapon %>
      <br><br>
      <%= @game.player_2.name %> chose <%= @game.player_2.weapon %>
      <br><br>
      <%= @game.battle_result %>
    <% end %>
  </section>
</body>
